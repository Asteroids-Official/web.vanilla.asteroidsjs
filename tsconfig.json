{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@asteroidsjs": ["libs/asteroidsjs"],
      "@asteroidsjs/*": ["libs/asteroidsjs/*"]
    },
    "lib": ["es6", "dom"]
  },
  "include": ["src/**/*.ts", "libs/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
